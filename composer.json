{
    "name": "caoguo sales",
    "description": "为微商提供分销解决方案",
    "keywords": ["yii2", "framework", "advanced", "sales","wechat"],
    "homepage": "https://www.caoguo.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/tsaoko/cgsales/issues?state=open",
